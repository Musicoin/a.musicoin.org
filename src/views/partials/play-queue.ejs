    }

    .play-queue table .track-title-cell {
        max-width: 300px;
    }

    .play-queue .track-title {
        font-weight: bold;
    }

    .play-queue .queue-item-action {
        width: 28px;
    }

    .play-queue .queue-item-action i {
        cursor: pointer;
    }

    .play-queue .play-queue-table {
        width: 100%;
    }

    .play-queue tr.active {
        background-color: #faf2af;
        transform: scale(1.05);
        box-shadow: 0 0 16px -4px black;
    }

    .play-queue .up-next-section {
        width: 100%;
