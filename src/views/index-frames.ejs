<!doctype html>
<html>
<head>
    <%- include partials/page-head.ejs %>
    <title>Musicoin.org</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #333;
            color: #eee;
            /*background-image: url('/images/musician.jpg');*/
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        #mainFrame {
            min-height: 100%;
            width: 100%;
            height: 100%;
            flex-grow: 1;
        }

        #mainSection {
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        #outer {
            min-height: 100%;
            display: flex;
            flex-direction: column;
            background-color: rgba(0,0,0,0.9);
        }

        #playerFrame {
            height: 125px;
            position: fixed;
            bottom:0;
            left:0;
            width: 100%;
        }

        #playerFill {
            min-height: 125px;
        }
    </style>
</head>
<body>
<iframe id=playerFrame src="/player" frameborder="0" class="show-on-play"></iframe>

<div id="outer">
    <div id=mainSection>
        <iframe id=mainFrame src="/main" frameborder="0"></iframe>
    </div>
    <div id=playerFill class="show-on-play"></div>
</div>

</body>
</html>