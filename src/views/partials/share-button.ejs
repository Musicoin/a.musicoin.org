<link rel="stylesheet" type="text/css" href="/styles/tab.css">
<link rel="stylesheet" type="text/css" href="/styles/dialog.css">
<link rel="stylesheet" type="text/css" href="/styles/share-track.css">
<button class="share-button btn btn-default btn-xs" id="open-share-dialog">Share</button>

<%
    var shortDescription = description.length > 69 ? description.substring(0, 69) + '...' : description;
 %>
<div id="share-track-options-dialog" class="musicoin-dialog">
  <div class="dialog-wrapper">
    <!-- <div class="dialog-header"></div> -->
    <div class="dialog-body">
      <div class="musicoin-tab-root" id="share-options-tab">
        <div class="tab-links-container">
          <ul class="tab-links">
            <li class="tab-link-item">
              <a href="#social-network-sharing" class="tab-link">Share</a>
            </li>
            <li class="tab-link-item">
              <a href="#embedded-player-source-code-container" class="tab-link">Embed</a>
            </li>
          </ul>
        </div>
        <div class="tab-contents">
          <div id='social-network-sharing'>
            <div class="social-sharing-preview">
              <iframe id="social-sharing-preview-frame" src="https://musicoin.org/embedded-player/<%=license.address%>?embedded=true&autoQueue=true&preview=true"></iframe>
            </div>
            <div id="share-options-container">
              <h5 id="share-options-header">Share on</h5>
              <ul id="share-options">
                <li class="share-option">
                  <a class="btn btn-social-icon btn-twitter" href="https://twitter.com/share?url=https://musicoin.org/nav/track/<%=license.address%>&text=<%=shortDescription%>&utm_source=musicoin&utm_campaign=share&utm_medium=twitter" target="_blank">
                  <span class="fa fa-twitter"></span>
                </a>
                </li>
                <li class="share-option">
                  <a class="btn btn-social-icon btn-facebook" href="https://www.facebook.com/sharer/sharer.php?u=https://musicoin.org/nav/track/<%=license.address%>&text=<%=shortDescription%>&utm_source=musicoin&utm_campaign=share&utm_medium=facebook" target="_blank">
                  <span class="fa fa-facebook"></span>
                </a>
                </li>
                <li class="share-option">
                  <a class="btn btn-social-icon btn-tumblr" href="https://www.tumblr.com/widgets/share/tool?canonicalUrl=https://musicoin.org/nav/track/<%=license.address%>&utm_source=musicoin&utm_campaign=share&utm_medium=tumblr&posttype=audio&tags=musicoin%2Cmusic%2C<%=license.artistName%>%2C<%=license.title%>%2C%20bugle%20%20%2Cjohn%20oliver%2Candy%20zaltzman&caption=<%=shortDescription%>" target="_blank">
                  <span class="fa fa-tumblr"></span>
                </a>
                </li>
                <li class="share-option">
                  <a class="btn btn-social-icon btn-google" href="https://plus.google.com/share?url=https://musicoin.org/nav/track/<%=license.address%>&text=<%=shortDescription%>&utm_source=musicoin&utm_campaign=share&utm_medium=googleplus" target="_blank">
                  <span class="fa fa-google"></span>
                </a>
                </li>
                <li class="share-option">
                  <a class="btn btn-social-icon btn-pinterest" href="http://pinterest.com/pin/create/button/?url=https://musicoin.org/nav/track/<%=license.address%>&utm_source=musicoin&utm_campaign=share&utm_medium=pinterest&media=https://musicoin.org<%=license.image%>&description=<%=shortDescription%>&is_video=true" target="_blank">
                  <span class="fa fa-pinterest"></span>
                </a>
                </li>
              </ul>
            </div>
          </div>
          <div id='embedded-player-source-code-container'>
            <div class="embedded-player-preview">
              <iframe id="embedded-player-preview-frame" src="https://musicoin.org/embedded-player/<%=license.address%>?embedded=true&autoQueue=true&preview=true"></iframe>
            </div>
            <div id="embedded-player-source-code">
              <h5 id="embedded-player-source-code-header">Source Code</h5>
              <textarea type="text" id="embedded-player-source-code-field"><iframe id=&quot;embedded-player-preview-frame&quot; src=&quot;https://musicoin.org/embedded-player/<%=license.address%>?embedded=true&amp;autoQueue=true&amp;preview=true&quot;></iframe></textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
