<!doctype html>
<html>

<head>
  <%- include partials/page-head.ejs %>
  <style>
    @font-face {
      font-family: Raleway;
      src: url('../fonts/Raleway-Regular.ttf');
    }
  </style>
  <link rel="stylesheet" type="text/css" href="/styles/player.css">
  <link rel="stylesheet" type="text/css" href="/styles/embedded-player.css">
</head>

<body>
	<div id="embedded-player-main" class="embedded-player">
		<div id="track-title"><%=data.license.title%> by <%=data.license.artistName%></div>
		<div id="track-description"><%=data.license.description || "Find this track and other amazing tracks on musicoin.org"%></div>
		<div id="track-image"><img id="track-image-element" src="https://musicoin.org<%=data.license.image%>" /></div>
		<%- include partials/embedded-player.ejs %>
	</div>
  
    <script type="text/javascript" src="/js/player.js"></script>
    <script>
      $(document).ready(function() {
        musicoin.audioPlayer.initialize({embedded: true, onReady: function onReady() {
          musicoin.audioPlayer.queueTrack('<%=address%>');
        }});
      });
    </script>
</body>

</html>
