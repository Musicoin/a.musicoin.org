<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Login</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/admin/su" method="post">
            <div style="display: none">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" value="dummy">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" value="dummy">
                </div>
            </div>
            <div class="form-group">
                <label>Profile Address</label>
                <input type="text" class="form-control" name="profileAddress">
            </div>

            <div class="form-group">
                <label>Twitter Handle</label>
                <input type="text" class="form-control" name="twitterHandle">
            </div>

            <div class="form-group">
                <label>Gmail address</label>
                <input type="text" class="form-control" name="gmailAddress">
            </div>

            <div class="form-group">
                <label>Soundcloud username</label>
                <input type="text" class="form-control" name="soundcloudUsername">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Login</button>
        </form>
    </div>

</div>
</body>
</html>