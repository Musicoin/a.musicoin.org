        <script>
            $( document ).ready(function() {
                $(function () {
                $("#example1").DataTable({
                    "processing": true,
                    "serverSide": true,
                    "ajax": {
                        "url": "/admin/elements/playback-history", "dataSrc": function (json) {
                            var return_data = new Array();

                            for (var i = 0; i < json.length; i++) {
                                var playback = json[i];
                                console.log("PLAYBACK", playback);
                                var playbackDateDisplay = "";
                                var artistName = "";
                                var title = "";
                                var directPlayCount = "";
                                var directTipCount = "";
                                var user = "";
                                var tip = "";
                                if (playback.user != null) {
                                    user += '<td>' + playback.user.draftProfile.artistName + '</td>';
                                }
                                else if (playback.anonymousUser != null) {
                                    user += '<td>' + playback.anonymousUser.ip + '<br>' + playback.anonymousUser.session + '<br><a class="de-parameter-setter clickable ' + playback.anonymousUser.accountLocked != null ? "text-danger" : "" + 'de-parameters="anonuser=' + playback.anonymousUser._id + ',start=0" title="filter by user"> filter</a></td>';
                                }
                                else {
                                    user += '<td></td>';
                                }

                                title += '<td>' + playback.release.title + '<br><a target="release-window" href="/track/' + playback.release.contractAddress + '">view</a></td>';

                                playbackDateDisplay += playback.playbackDate;

                                directPlayCount = playback.release.directPlayCount || "0";
                                directTipCount += playback.release.directTipCount || "0";

                                tip = '<td>' + directPlayCount + '/' +
                                    directTipCount + '</td>';

                                return_data.push({
                                    'playbackDateDisplay': playbackDateDisplay,
                                    'user': user,
                                    'title': title,
                                    'tip': tip
                                });
                            }
                            return return_data;
                        }
                    },
                    columns: [
                        { 'data': 'playbackDateDisplay' },
                        { 'data': 'user' },
                        { 'data': 'title' },
                        { 'data': 'tip' }
                    ]
                });
            });
});
   
        </script>
