    }

    .player-control {
        color: white;
        font-size: 36px;
        cursor: pointer;
    }

    .player-control.disabled {
        color: rgba(255,255,255,0.2);
    }

    .player-control-large {
    }

    .player-action-values {
        margin-right: 5px;
        text-align: right;
    }

    .player-time-area {
        display: flex;
        justify-content: space-between;
        color: white;
    }

    .player-progress-row {
