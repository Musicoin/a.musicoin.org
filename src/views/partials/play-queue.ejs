        flex-direction: column;

        max-width: 370px;
    }

    .play-queue .large-track-image {
        background-size: cover;
        width: 256px;
        height: 256px;
        max-width: 100%;
        background-position: center;
        background-repeat: no-repeat;
        border-radius: 4px;
    }

    .play-queue .track-detail-area {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        max-width: 325px;
